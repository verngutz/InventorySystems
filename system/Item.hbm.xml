<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="system" >
<class name="Item" table="ITEM">

<id name="itemCode" type="string" column="ITEM_CODE">
	<generator class="assigned"/>
</id>

<property name="itemName" type="string" column="ITEM_NAME"/>

<property name="itemCategory" type="string" column="CATEGORY"/>

<property name="unitName" type="string" column="UNIT_NAME"/>

<property name="unitPrice" type="double" column="UNIT_PRICE"/>

</class>

</hibernate-mapping>
